{
  "author": "",
  "description": "WOPR TTS plugin for VibeVoice (OpenAI-compatible)",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.1.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "wopr",
    "plugin",
    "tts",
    "vibevoice",
    "voice",
    "speech"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "name": "wopr-plugin-voice-vibevoice",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "1.0.0",
  "wopr": {
    "plugin": {
      "category": "voice",
      "description": "Microsoft VibeVoice TTS (requires 16GB+ VRAM)",
      "install": [
        {
          "image": "valyriantech/vibevoice_server",
          "kind": "docker",
          "label": "Pull VibeVoice server",
          "tag": "latest"
        }
      ],
      "name": "voice-vibevoice",
      "requires": {
        "docker": ["valyriantech/vibevoice_server:latest"]
      },
      "type": "tts"
    }
  }
}
